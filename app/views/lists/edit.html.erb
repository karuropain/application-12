<body>
  <h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_list_path(@book.id), method: :patch do |f| %>
<p>title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<p><%= f.submit 'Update Book' %></p>

<% end %>

    <%= link_to "Show", list_path(@book.id) %>
    |
    <%= link_to "Back", lists_path %>

</body>
