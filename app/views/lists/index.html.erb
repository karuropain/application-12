<!DOCTYPE HTML>
<html lang="ja">
<html>
  <head>
  </head>
<!--削除時メッセージ  Book was successfully destroyed.-->
  <body>
<!--　投稿一覧　-->
  <p id ="notice">
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
  </p>
    <h1>Books</h1>
    
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
<% @books.each do |list| %>
      <tbody>
        <tr>
          <td>
            <span><%= list.title %></span>
          </td>
          <td>
            <span><%= list.body %></span>
          </td>
          <td>
            <span><%= link_to 'Show', list_path(list.id) %></span>
          </td>
          <td>
            <span><%= link_to 'Edit', edit_list_path(list.id) %></span>
          </td>
          <td>
            <span><%= link_to 'Destroy', list_path(list.id), method: :delete, data: { confirm: "Are you sure?" }%></span>
          </td>
        </tr>
      </tbody>
<% end %>      
    </table>


<!--　新規投稿　-->
<h2>New book</h2>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>

<div class="actions"><%= f.submit 'Create Book' %></div>


<% end %>

  </body>
</html>