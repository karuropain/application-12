<!DOCTYPE HTML>
<html lang="ja">
<html>
  <head>
  </head>

  <body>
<!--　投稿一覧　-->
    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
<% @books.each do |list| %>
      <tbody>
        <tr>
          <td>
            <span><%= list.title %></span>
          </td>
          <td>
            <span><%= list.body %></span>
          </td>
          <td>
            <span><%= link_to 'Show', list_path(list.id) %></span>
          </td>
          <td>
            <span><%= link_to 'Edit', edit_list_path(list.id) %></span>
          </td>
          <td>
            <span><%= link_to 'Destroy', list_path(list.id), method: :delete %></span>
          </td>
        </tr>
      </tbody>
<% end %>      
    </table>


<!--　新規投稿　-->
<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>

<% end %>

  </body>
</html>